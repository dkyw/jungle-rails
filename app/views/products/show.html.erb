<section class="products-show">

 <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
</header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Review</dt>
          <dd>
            <% @review.each do |review| %>
              <%= review.rating %> - <%= review.description %> - <%= review.user.first_name %>
              <% if current_user %>
                <% if current_user.id == review.user_id %>
                  <td> <%= link_to fa_icon('trash'), [review.product, review], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %></td>
                <% end %>
              <% end %>
            <% end %>
          </dd>
        </dl>
      </div>
    </div>

  </article>

</section>



<% if current_user %>

  <%= form_for([@product, @new_review]) do |form| %>
    <div class="field">
      <%= form.label :rating %>
      <%= form.select :rating, [ 1,2,3,4,5 ], :prompt => 'Select One' %>
    </div>

     <div class="field">
      <%= form.label :description %>
      <%= form.text_area :description %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>

  <% end %>
<% end %>